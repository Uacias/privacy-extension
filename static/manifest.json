{
	"manifest_version": 3,
	"name": "Privacy Extension",
	"version": "1.0.0",
	"description": "ZK with Garaga & SvelteKit",
	"permissions": ["storage", "scripting", "offscreen"],
	"host_permissions": ["http://localhost:5173/*", "https://privacypoolsstaging.visoft.dev/*", "https://aztec-ignition.s3.amazonaws.com/*"],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"action": {
		"default_popup": "index.html"
	},
	"content_scripts": [
		{
			"matches": ["http://localhost:5173/*", "https://privacypoolsstaging.visoft.dev/*"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["content.js", "inject.js", "offscreen.html", "offscreen.js"],
			"matches": ["<all_urls>"]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
	}
}
